  </head>
  <body>
	<div id='upper_pagewrapper'>
		<div id='header'>
					
			<div id="logo"><%= link_to image_tag ("system/bg/front/logo.jpg"), "/" %></div>
			<div id="extra"><%= image_tag ("system/buttons/twitter.jpg") %><%= image_tag ("system/buttons/facebook.jpg") %>	<%= render :partial => "shared/user_bar", :object => self %></div>
			
	  	</div>
		<div id='navbar'>
			<ul>
				<%= render :partial => "shared/front_menu" %>					
			</ul>
	  	</div>
	
		<% if controller.controller_name == "viewer" %>
		<div id="largegallery">
			<div id="holder">
				<div id="cuber">
					<div id="listOfImages">
						<% if @page.page_featured_photo %>
							<%= render :partial => "shared/admin/images/featured_photo", :object => @page %>
						<% end %>
					</div>
				</div>
			</div>		
		</div>
		<% end %>
		
 	</div>
	<div id='lower_pagewrapper'>
		<div id='content' class="clearfix">
	     		<%= yield %>
		</div>
